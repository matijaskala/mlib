#ifndef NON_STD_XTERM
#define NON_STD_XTERM

#include <string>

namespace non_std
{

enum color {
    black,
    red,
    green,
    yellow,
    blue,
    magenta,
    cyan,
    white,
    custom,
    default_color
};

namespace xterm
{

[[gnu::visibility("default")]] std::string escape ( const std::string& __s );

template<typename _CharT, typename _Traits>
  inline std::basic_ostream<_CharT, _Traits>&
  bold(std::basic_ostream<_CharT, _Traits>& __os)
  { return __os << escape("1m"); }

[[gnu::visibility("default")]] std::string bgcolor ( color __c );
[[gnu::visibility("default")]] std::string fgcolor ( color __c );

template<typename _CharT, typename _Traits>
  inline std::basic_ostream<_CharT, _Traits>&
  reset(std::basic_ostream<_CharT, _Traits>& __os)
  { return __os << escape("m"); }
}

}

#endif // NON_STD_XTERM

