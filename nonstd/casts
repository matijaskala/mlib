#ifndef NON_STD_CASTS
#define NON_STD_CASTS

#include <type_traits>

template < typename _Res, typename _Arg >
inline _Res reference_cast ( _Arg s ) {
    void* p = &s;
    _Res* r = static_cast<_Res*> ( p );
    return *r;
}

#endif // NON_STD_CASTS
